<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:text="SET UP"
        android:id="@+id/setup" />
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FTP Details"
        android:textSize="22dp"
        android:layout_below="@+id/setup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:id="@+id/ftp_details" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Server name (or IP)"
        android:id="@+id/server_name"
        android:layout_below="@+id/ftp_details"
        android:layout_alignLeft="@+id/ftp_details"
        android:layout_alignStart="@+id/ftp_details" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server_name"
        android:layout_alignLeft="@+id/server_name"
        android:layout_alignStart="@+id/server_name"
        android:layout_alignRight="@+id/setup"
        android:layout_alignEnd="@+id/setup" />

</RelativeLayout>
