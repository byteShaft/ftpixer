<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <Button
        android:id="@+id/scan_button"
        android:text="Scan Barcode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:background="@android:drawable/edit_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/barCodeEditText"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true"/>
    <RadioGroup
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/scan_button">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/job_no_radio_button"
            android:text="Or Enter Job Number"/>
        <RadioButton
            android:id="@+id/reg_no_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reg No."/>
    </RadioGroup>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barCodeEditText"
        android:layout_margin="5dp"
        android:layout_above="@+id/pic_button"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/radio_group_one">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workshop"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Strip"
            android:id="@+id/radio_workshop_strip">
        </RadioButton>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panel"
            android:id="@+id/radio_workshop_panel">
        </RadioButton>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paint"
            android:id="@+id/radio_workshop_paint">
        </RadioButton>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refit"
            android:id="@+id/radio_workshop_refit">
        </RadioButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V.D.A."
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Claim"
                android:id="@+id/radio_vda_claim">
            </RadioButton>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Non-Claim"
                android:id="@+id/radio_vda_non_claim">
            </RadioButton>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extra Work"
                android:id="@+id/radio_vda_extra_work">
            </RadioButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pre-Inspection"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Claim Related"
                android:id="@+id/radio_pre_inspection_claim_related">
            </RadioButton>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Non-Claim"
                android:id="@+id/radio_pre_inspection_non_claim">
            </RadioButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Claim"
                android:id="@+id/radio_mobile_claim">
            </RadioButton>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Non-Claim"
                android:id="@+id/radio_mobile_non_claim">
            </RadioButton>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extra Work"
                android:id="@+id/radio_mobile_extra_work">
            </RadioButton>
        </RadioGroup>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Take Photos"
        android:id="@+id/pic_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#0453A2"
        android:id="@+id/buttonCount"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</RelativeLayout>
